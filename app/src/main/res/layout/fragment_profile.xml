<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.home.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Os meus dados"
            android:textAllCaps="true"
            android:textColor="#50A9B4"
            android:textSize="34sp"
            android:textStyle="normal" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFaturas"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="24dp"
            android:text="Faturas"
            />

        <EditText
            android:id="@+id/inputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#50A9B4"

            android:hint="Nome de Utilizador"
            android:inputType="text"
            android:padding="12dp"
            android:text="@={viewModel.username}" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:text="@={viewModel.email}" />


        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="Nome"
            android:inputType="text"
            android:padding="12dp"
            android:text="@={viewModel.nameUser}" />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="Nº Telemóvel"
            android:inputType="phone"
            android:padding="12dp"
            android:text="@={viewModel.phoneNumber}" />

        <EditText
            android:id="@+id/inputStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="Morada"
            android:inputType="text"
            android:padding="12dp"
            android:text="@={viewModel.address}" />

        <EditText
            android:id="@+id/inputLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="Localidade"
            android:inputType="text"
            android:padding="12dp"
            android:text="@={viewModel.locale}" />

        <EditText
            android:id="@+id/inputPostalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:hint="Código Postal"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:text="@={viewModel.postalCode}" />

        <Spinner
            android:id="@+id/roleSpinner2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#50A9B4"
            android:entries="@array/cozinha_array" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/azul"
            android:text="Guardar Alterações"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingVertical="12dp"/>



        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/red"
            android:text="@string/logout"
        />

    </LinearLayout>

</ScrollView>

