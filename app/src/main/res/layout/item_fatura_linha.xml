<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Espaço para valor da Coluna 1 -->
        <TextView
            android:id="@+id/txt_nsenha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Valor"
            android:padding="8dp"
            android:gravity="center"
            />

        <!-- Espaço para valor da Coluna 2 -->
        <TextView
            android:id="@+id/txt_quantidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Valor"
            android:padding="8dp"
            android:gravity="center"
            />

            <!-- Espaço para valor da Coluna 3 -->
        <TextView
            android:id="@+id/txt_preco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Valor"
            android:padding="8dp"
            android:gravity="center"
            />




        <!-- Espaço para valor da Coluna 4 -->
        <TextView
            android:id="@+id/txt_taxa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Valor"
            android:padding="8dp"
            android:gravity="center"
            android:inputType="numberDecimal" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>